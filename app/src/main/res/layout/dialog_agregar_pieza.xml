<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Estructura"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#1d4ed8"
        android:layout_marginBottom="16dp"/>

    <!-- Selector de material -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tipo de Material:"
            android:textStyle="bold"
            android:textColor="#374151"/>

        <Spinner
            android:id="@+id/spinnerMaterial"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:background="@android:drawable/btn_dropdown"/>
    </LinearLayout>

    <!-- Dimensiones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dimensiones (mm):"
        android:textStyle="bold"
        android:textColor="#374151"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/etAncho"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Ancho"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="×"
            android:textSize="18sp"
            android:textColor="#6b7280"
            android:layout_gravity="center_vertical"
            android:padding="4dp"/>

        <EditText
            android:id="@+id/etAlto"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Alto"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="×"
            android:textSize="18sp"
            android:textColor="#6b7280"
            android:layout_gravity="center_vertical"
            android:padding="4dp"/>

        <EditText
            android:id="@+id/etLargo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Largo (m)"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@android:drawable/edit_text"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- Cantidad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cantidad:"
            android:textStyle="bold"
            android:textColor="#374151"/>

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:hint="1"
            android:gravity="center"
            android:background="@android:drawable/edit_text"/>
    </LinearLayout>

    <!-- Descripción -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textStyle="bold"
        android:textColor="#374151"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tipo de estructura"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"/>

    <!-- Botón de calcular -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Calcular Total m²"
            android:textAllCaps="false"
            android:background="#2563eb"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/cbRecordar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordar"
            android:textSize="12sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Resultado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f9ff"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#374151"/>

        <TextView
            android:id="@+id/tvTotalM2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 m²"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1d4ed8"/>
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:background="#f5f5f5"
            android:textColor="#6b7280"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Agregar"
            android:textAllCaps="false"
            android:background="#2563eb"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>