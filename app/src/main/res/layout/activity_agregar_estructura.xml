<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Estructura"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Vista previa de imagen -->
        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:background="#f0f0f0"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Contenedor para Descripción y Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Descripción -->
            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Descripción de la estructura..."
                android:gravity="start"
                android:inputType="textMultiLine"
                android:imeOptions="actionNext"
                android:singleLine="false"
                android:layout_marginEnd="8dp"/>

            <!-- Botón para agregar imagen -->
            <Button
                android:id="@+id/btnAgregarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="➕"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"/>

            <!-- Botón para borrar imagen -->
            <Button
                android:id="@+id/btnBorrarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🗑️"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Botón para agregar pieza -->
        <Button
            android:id="@+id/btnAgregarPieza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Agregar Pieza"
            android:layout_marginBottom="16dp"/>



        <!-- Cabecera de la tabla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3F51B5"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tipo Material"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cant"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Largo"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ancho"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total m²"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acciones"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- RecyclerView para items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewItems"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Finalizar -->
        <Button
            android:id="@+id/btnFinalizarEstructura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar Estructura"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
