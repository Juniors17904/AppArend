<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VerBaseDatosActivity">

    <!-- Scroll con tablas -->
    <ScrollView
        android:id="@+id/scrollTablas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBorrarTodo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Título Trabajos -->
            <TextView
                android:id="@+id/tvTrabajos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabla: Trabajos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTrabajos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <!-- Título Estructuras -->
            <TextView
                android:id="@+id/tvEstructuras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabla: Estructuras"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEstructuras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <!-- Título Piezas -->
            <TextView
                android:id="@+id/tvPiezas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabla: Piezas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPiezas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

        </LinearLayout>
    </ScrollView>

    <!-- Botón fijo abajo -->
    <Button
        android:id="@+id/btnBorrarTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar BD"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
