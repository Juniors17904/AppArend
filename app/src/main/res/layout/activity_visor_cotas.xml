<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">



    <ImageView
        android:id="@+id/imgVisor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginTop="8dp" />

    <com.example.apparend.utils.CotasOverlay
        android:id="@+id/cotasOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imgVisor"
        app:layout_constraintStart_toStartOf="@id/imgVisor"
        app:layout_constraintTop_toTopOf="@id/imgVisor"
        app:layout_constraintEnd_toEndOf="@id/imgVisor"/>

    <!-- BOTONES SUPERIORES - SOLO ICONOS CIRCULARES -->
    <LinearLayout
        android:id="@+id/containerButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetroceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9E9E9E"
            android:text=""
            app:contentPadding="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecortar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#2196F3"
            android:text=""
            app:contentPadding="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_crop"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMedir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#4CAF50"
            android:text=""
            app:contentPadding="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_medir"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FF9800"
            android:text=""
            app:contentPadding="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_done"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="28dp" />

    </LinearLayout>

    <!-- TEXTO DE INSTRUCCIÃ“N -->
    <TextView
        android:id="@+id/txtInstruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/containerButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
